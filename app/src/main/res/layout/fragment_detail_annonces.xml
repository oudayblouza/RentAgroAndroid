<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.rentagro.Activities.Fragments.detailAnnonces">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#CCfafafa"


        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ss.com.bannerslider.views.BannerSlider
                android:id="@+id/banner_slider1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toTopOf="parent"

                />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner_slider1"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/titlelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/banner_slider1"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="Title  : " />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="7"
                        android:background="#fff">

                        <TextView
                            android:id="@+id/tvtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:paddingRight="5dp"
                            android:text="mmmmmmmmmmm  "
                            android:textColor="#000000"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pricelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titlelay"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="Price  : " />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="7"
                        android:background="#fff">

                        <TextView
                            android:id="@+id/tvprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:paddingRight="5dp"
                            android:text="mmmmmmmmmmm  "
                            android:textColor="#000000"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/durationlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pricelay"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="Duration  : " />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="7"
                        android:background="#fff">

                        <TextView
                            android:id="@+id/tvduration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:paddingRight="5dp"
                            android:text="mmmmmmmmmmm  "
                            android:textColor="#000000"

                            />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout

                    android:id="@+id/naturelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="nature  : " />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="7"
                        android:background="#fff">

                        <TextView
                            android:id="@+id/tvnature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:paddingRight="5dp"
                            android:text=" hahaha mmmmmmmmmmm jjjdj dkkdk ddldlld kdkdkd"
                            android:textColor="#000000"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cattypelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/durationlay"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="Categ &amp; Type  : " />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="7"
                        android:background="#fff">

                        <TextView
                            android:id="@+id/tvcattype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:paddingRight="5dp"
                            android:text=" hahaha mmmmmmmmmmm"
                            android:textColor="#000000"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/datelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cattypelay"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="Renting Date  : " />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="7"
                        android:background="#fff">

                        <TextView
                            android:id="@+id/tvdatedelay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:paddingRight="5dp"
                            android:text="Test allo mmmmmmmmmmm"
                            android:textColor="#000000"

                            />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/villedellay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datelay"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="Ville &amp; Del  : " />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:layout_rowWeight="1"
                        android:layout_weight="7"
                        android:background="#fff">

                        <TextView
                            android:id="@+id/tvvilledel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:paddingRight="5dp"
                            android:text="ouday blouza"
                            android:textColor="#000000"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:text="Description : " />
                </RelativeLayout>

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="#fff"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"
                    android:textSize="14sp" />

            </LinearLayout>

            <com.esprit.rentagro.Activities.MapViewCustom
                android:id="@+id/customMap"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/layout"
                android:layout_margin="25dp"
                android:background="@android:drawable/dialog_holo_light_frame"

                />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customMap"
                android:id="@+id/recyclerSh"
                app:msrv_gravity="start"
                app:msrv_snap_count="2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/recyclerSh" />
        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
